pipeline {
  agent any
	
  triggers {
    pollSCM('*/5 * * * *')
  }
	
  stages {
    stage("ITests for MySQL") {
      steps {
        script {
          docker.image('mysql:8.0').withRun('-e "TZ=Europe/Prague" -e "MYSQL_ROOT_PASSWORD=sqlproc" -e "MYSQL_DATABASE=sqlproc" -e "MYSQL_USER=sqlproc" -e "MYSQL_PASSWORD=sqlproc"', '--log-bin-trust-function-creators=1') { c ->
            docker.image('mysql:8.0').inside("--link ${c.id}:mysql") {
              sh 'while ! mysqladmin ping -hmysql --silent; do sleep 1; done'
            }
            docker.image('maven:3.6.1-jdk-8').inside("--link ${c.id}:mysql") {
              sh "mvn clean package -P mysql-itests"
            }
          }
        }
      }
    }
  }
  
  post {
    always {
      junit '**/target/surefire-reports/*.xml'
    }
  }
}

