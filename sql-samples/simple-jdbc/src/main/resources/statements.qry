SEQ1(OPT)=call NEXT VALUE FOR HIBERNATE_SEQUENCE;
SEL1(OPT)=call identity();

ALL_PEOPLE(QRY,in=person,out=person,col=person)=
  select %ID @id, %NAME @name
  from %%PERSON
  {= where
   {& %ID = :id}
   {& UPPER(%NAME) = :+name}
  }
  {#1 order by %ID}
  {#2 order by %NAME}
;

LIKE_PEOPLE(QRY,in=person,out=person,col=person)=
  select %ID @id, %NAME @name
  from %%PERSON
  {= where
   {& %ID = :id}
   {& UPPER(%NAME) like :+name}
  }
  {#1 order by %ID}
  {#2 order by %NAME}
;

INSERT_PERSON(CRUD,in=person,col=person)=
  insert into %%PERSON (%ID, %NAME)
  {= values (:id(type=long,seq=SEQ1), :name) }
;
  
INSERT_PERSON2(CRUD,in=person,col=person)=
  insert into %%PERSON (%NAME)
  {= values (:id(type=long,id)sel, :name) }
;

GET_PERSON(CRUD,in=person,out=person,col=person)=
  select @id, @name
  from %%PERSON
  {= where %ID = :id}
;

UPDATE_PERSON(CRUD,in=person,out=person,col=person)=
  update %%PERSON
  {= set %NAME = :name}
  {= where {& %ID = :id(type=long,notnull)}}
;
  
DELETE_PERSON(CRUD,in=person,col=person)=
  delete from %%PERSON
  {= where {& %ID = :id(type=long,notnull)}}
;

INSERT_CONTACT(CRUD,in=contact,col=contact)=
  insert into %%CONTACT (%ID, %PERSON_ID, %ADDRESS)
  {= values (:id(type=long,seq=SEQ1), :personId, :address) }
;

ALL_PEOPLE_AND_CONTACTS(QRY,in=person,out=person,col=person=p,col=contact=c)=
  select %p.ID @id(type=long,id), %p.NAME @name, %c.ID @contacts.id(type=long,id), %p.ID @contacts.personId, %c.ADDRESS @contacts.address
  from %%PERSON p left join %%CONTACT c on %p.ID = %c.PERSON_ID
  {= where
   {& %p.ID = :id}
   {& UPPER(%p.NAME) like :+name}
  }
  {#1 order by %p.NAME, %c.ADDRESS}
;

